<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Colored rectangle-->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="100dp"
                android:height="40dp" />
            <solid android:color="#657496" />
        </shape>
    </item>

    <!-- Overlay with same color as background-->
    <item
        android:top="20dp"
        android:bottom="-40dp"
        android:right="-200dp"
        android:gravity="right">
        <rotate
            android:fromDegrees="65">
            <shape android:shape="rectangle">
                <solid android:color="#bdc4d6eb" />
            </shape>
        </rotate>
    </item>
</layer-list>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.elitelabs.fortnitetracker.gamemode"
    android:orientation="vertical">

    <!-- GAMEMODE - HEADER-->
    <RelativeLayout
        android:layout_weight="0.75"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="3dp"
        android:background="@drawable/lightblueg">

        <TextView
            android:id="@+id/Type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingVertical="3dp"
            android:paddingLeft="7dp"
            android:gravity="center"
            android:text="Solo"
            android:textColor="@color/white"
            android:fontFamily="@font/fortnite"
            android:autoSizeTextType="uniform"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/Matches"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="7dp"
            android:layout_alignParentRight="true"
            android:text="0 Matches"
            android:textColor="@color/grey"
            android:autoSizeTextType="uniform"/>

    </RelativeLayout>

    <!-- TOPS - BODY 1-->
    <LinearLayout
        android:layout_weight="1.75"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/darkblueg">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.00">

            <TextView
                android:layout_weight="1"
                android:id="@+id/Wins"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/fortnite"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:padding="15dp"
                android:textSize="20sp"
                android:autoSizeTextType="uniform"/>

            <View
                android:layout_marginVertical="10dp"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#72abaaaa" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/Top2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:padding="15dp"
                android:textSize="20sp"
                android:fontFamily="@font/fortnite"
                android:autoSizeTextType="uniform"/>

            <View
                android:layout_marginVertical="10dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#72abaaaa"
                android:id="@+id/view" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/Top3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:padding="15dp"
                android:textSize="20sp"
                android:fontFamily="@font/fortnite"
                android:autoSizeTextType="uniform"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/wins"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/grey"
                android:fontFamily="@font/fortnite"
                android:padding="2dp"
                android:autoSizeTextType="uniform"
                android:text="Wins" />

            <TextView
                android:id="@+id/top2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:text="Top 10"
                android:textColor="@color/grey"
                android:fontFamily="@font/fortnite" />

            <TextView
                android:id="@+id/top3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="2dp"
                android:autoSizeTextType="uniform"
                android:text="Top 25"
                android:textColor="@color/grey"
                android:fontFamily="@font/fortnite"/>

        </LinearLayout>
    </LinearLayout>

    <!-- STATS - BODY 2 -->
    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.7"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/lightblue">

            <TextView
                android:id="@+id/kills"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:padding="7dp"
                android:text="Kills"
                android:textColor="@color/grey" />
            <TextView
                android:id="@+id/Kills"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeTextType="uniform"
                android:padding="7dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="0"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:background="@color/darkblue"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/lightblue">

            <TextView
                android:id="@+id/kd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:padding="7dp"
                android:text="K/d"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/Kd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeTextType="uniform"
                android:padding="5dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="0"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:background="@color/darkblue"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/lightblue">
            <TextView
                android:id="@+id/winP"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:padding="7dp"
                android:text="Win %"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/WinP"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeTextType="uniform"
                android:padding="5dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="0 %"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:background="@color/darkblue"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/lightblue">
            <TextView
                android:id="@+id/kpm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:padding="7dp"
                android:text="Kills Per Match"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/KPM"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:autoSizeMaxTextSize="16sp"
                android:textSize="13sp"
                android:autoSizeTextType="uniform"
                android:padding="5dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="0"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:background="@color/darkblue"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/lightblue">
            <TextView
                android:id="@+id/avgScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:padding="7dp"
                android:text="Average score per match"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/AvgScore"
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:layout_height="match_parent"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeTextType="uniform"
                android:padding="7dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="0"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:background="@color/darkblue"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:background="@drawable/bottomcorners">
            <TextView
                android:id="@+id/totalScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:padding="7dp"
                android:text="Total Score"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/TotalScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="16sp"
                android:paddingRight="10dp"
                android:paddingVertical="3dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="0"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:layout_below="@+id/info"/>

    </LinearLayout>




</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topHalf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:background="@color/darkGrey2">

        <!-- Player 1 (left) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Card for wins -->
            <android.support.v7.widget.CardView
                android:id="@+id/wins"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/card"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/Wins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="7dp"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/kodchasan_bold"
                        android:text="0000"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Wins"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/kodchasan_reg"
                        android:text="Wins"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- Card for tops -->
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="0dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                app:cardBackgroundColor="@color/darkGrey2">

                <RelativeLayout
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:paddingVertical="7dp">

                    <!-- MAKE AN IF STATEMENT IF THE NUMBER IS > 1000 THEN MAKE THE FONT SMALLER-->
                    <TextView
                        android:id="@+id/Top2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/kodchasan_bold"
                        android:gravity="center_horizontal"
                        android:text="000"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/top2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Top2"
                        android:layout_alignLeft="@+id/Top2"
                        android:fontFamily="@font/kodchasan_reg"
                        android:text="Top 5"
                        android:gravity="center"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/Top3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kodchasan_bold"
                        android:layout_above="@id/top3"
                        android:gravity="center_horizontal"
                        android:text="000"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/top3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/kodchasan_reg"
                        android:gravity="center"
                        android:text="Top 10"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <!-- Player 2 (right) -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <!-- Card for wins -->
            <android.support.v7.widget.CardView
                android:id="@+id/winsp2"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:id="@+id/cardp2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/Winsp2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="7dp"
                        android:gravity="center"
                        android:fontFamily="@font/kodchasan_bold"
                        android:text="0000"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/titlep2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Winsp2"
                        android:gravity="center"
                        android:fontFamily="@font/kodchasan_reg"
                        android:text="Wins"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- Card for tops -->
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="0dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/darkGrey2">

                <RelativeLayout
                    android:id="@+id/card2p2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:paddingVertical="7dp">

                    <!-- MAKE AN IF STATEMENT IF THE NUMBER IS > 1000 THEN MAKE THE FONT SMALLER-->
                    <TextView
                        android:id="@+id/Top2p2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/kodchasan_bold"
                        android:gravity="center"
                        android:text="000"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/top2p2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Top2p2"
                        android:layout_alignLeft="@+id/Top2p2"
                        android:fontFamily="@font/kodchasan_reg"
                        android:gravity="center"
                        android:text="Top 5"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/Top3p2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/top3p2"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="@font/kodchasan_bold"
                        android:gravity="center"
                        android:text="000"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/top3p2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/kodchasan_reg"
                        android:gravity="center"
                        android:text="Top 10"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>


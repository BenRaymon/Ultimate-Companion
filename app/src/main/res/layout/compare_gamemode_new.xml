    <!-- STATS - BODY 2 -->
    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:padding="7dp"
        android:background="@color/offwhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/kills"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginVertical="2dp"
                android:fontFamily="@font/kodchasan_bold"
                android:gravity="center"
                android:paddingLeft="7dp"
                android:text="Kills"
                android:textColor="@color/darkGrey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/Kills"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/kodchasan_reg"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="0"
                android:textColor="@color/darkGrey2"
                android:textSize="16sp" />

            <TextView
                android:fontFamily="@font/kodchasan_reg"
                android:id="@+id/Killsp2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="0"
                android:textColor="@color/darkGrey2"
                android:textSize="16sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:fontFamily="@font/kodchasan_bold"
                android:layout_centerInParent="true"
                android:id="@+id/kd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="2dp"
                android:paddingLeft="7dp"
                android:gravity="center"
                android:text="K/d"
                android:textSize="13sp"
                android:textColor="@color/darkGrey"/>
            <TextView
                android:id="@+id/Kd"
                android:fontFamily="@font/kodchasan_reg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="10dp"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:text="0.00"
                android:textSize="16sp"
                android:textColor="@color/darkGrey2"/>

            <TextView
                android:fontFamily="@font/kodchasan_reg"
                android:id="@+id/Kdp2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="0.00"
                android:textColor="@color/darkGrey2"
                android:textSize="16sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_centerInParent="true"
                android:fontFamily="@font/kodchasan_bold"
                android:id="@+id/winP"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="2dp"
                android:paddingLeft="7dp"
                android:gravity="center"
                android:text="Win %"
                android:textSize="13sp"
                android:textColor="@color/darkGrey"/>
            <TextView
                android:fontFamily="@font/kodchasan_reg"
                android:id="@+id/WinP"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="10dp"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:text="0.00 %"
                android:textSize="16sp"
                android:textColor="@color/darkGrey2"/>
            <TextView
                android:fontFamily="@font/kodchasan_reg"
                android:id="@+id/WinPp2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="0.00 %"
                android:textSize="16sp"
                android:textColor="@color/darkGrey2"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:fontFamily="@font/kodchasan_bold"
                android:layout_centerInParent="true"
                android:id="@+id/kpm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="2dp"
                android:paddingLeft="7dp"
                android:gravity="center"
                android:text="Kills per Match"
                android:textSize="13sp"
                android:textColor="@color/darkGrey"/>
            <TextView
